{% extends "layout.twig" %}

{% block content %}

	<h2>List of Users</h2>


	<a href="/user/add" class="adder">Add new User</a>

	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Roles</th>
			</tr>
		</thead>
		<tbody>
			{% for user in user_list %}
				<tr>
					<td>{{user.value.name}}</td>
					<td>
						<ul>
							{% for role in user.value.roles %}
								<li>{{role}}</li>
							{% endfor %}
						</ul>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="/user/add" class="adder">Add new User</a>
	
{% endblock %}