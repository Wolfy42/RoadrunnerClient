{% extends "layout.twig" %}
{% import "macro.container.twig" as layout_container %}

{% block content %}

	<h2>Transportation Units</h2>

	<a href="/container/add" class="adder">Add Transportation Unit</a>

	<table>
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>View</th>
			</tr>
		</thead>
		{% for container in container_list %}
			<tr>
				<td><code>{{ container.id }}</code></td>
				<td>{{ container.value.name }}</td>
				<td><a href="/container/view/{{ container.id }}">View</a></td>
			</tr>
		{% endfor %}
	</table>
	
	<a href="/container/add" class="adder">Add Transportation Unit</a>

{% endblock %}